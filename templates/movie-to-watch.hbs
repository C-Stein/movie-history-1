{{#each this}}
  <div class="media">
    <div class="media-left media-top">
      <img class="media-object img-thumbnail" src="{{poster}}">
    </div>
    <div class="media-body">
      <h3 class="media-heading">{{movieName}}</h3>
      <p>Release year: {{year}}</p>
      <p>{{actors}}</p>
      <p>Rating: {{rating}}/10</p>
      <div class="media-bottom">
        <button type="button" class="markWatched btn btn-default btn-sm">Mark Watched</button>
        <button type="button" class="removeButton btn btn-default btn-sm">Remove</button>
      </div>
    </div>
  </div>
{{/each}}